{
  "name": "hutte",
  "description": "CLI for hutte.io",
  "version": "0.0.0-development",
  "author": "@hutte-io",
  "bugs": "https://github.com/hutte-io/hutte-sf-plugin/issues",
  "type": "module",
  "dependencies": {
    "@inquirer/prompts": "^7.8.3",
    "@oclif/core": "^4.5.2",
    "@salesforce/core": "^8.21.0",
    "@salesforce/sf-plugins-core": "^12.2.4",
    "chalk": "^5.6.0",
    "cross-spawn": "^7.0.6",
    "fuzzy": "0.1.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@salesforce/cli-plugins-testkit": "^5.3.39",
    "@salesforce/dev-scripts": "^11.0.3",
    "@types/cross-spawn": "^6.0.6",
    "@types/js-yaml": "^4.0.9",
    "oclif": "^4.14.29",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://hutte.io",
  "keywords": [
    "sfdx-plugin",
    "sf-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sf",
    "topicSeparator": " ",
    "repositoryPrefix": "<%- repo %>/blob/master/<%- commandPath.replace('lib', 'src').replace('.js', '.ts') %>",
    "topics": {
      "hutte": {
        "description": "manage scratch orgs using Hutte"
      }
    },
    "additionalHelpFlags": [
      "-h"
    ]
  },
  "repository": "hutte-io/hutte-sf-plugin",
  "scripts": {
    "build": "tsc -p .",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint src/**/*.ts test/**/*.ts",
    "prepack": "rm -rf lib && tsc -b && oclif manifest && oclif readme",
    "format": "prettier -w src test",
    "test": "tsc -p test && nyc --extension .ts mocha --require ts-node/register --timeout 5000 --forbid-only \"test/**/*.test.ts\"",
    "test:debug": "tsc -p test && NODE_OPTIONS=\"--inspect-brk\" mocha --require ts-node/register",
    "version": "oclif readme && git add README.md"
  }
}