{
  "name": "hutte",
  "description": "CLI for hutte.io",
  "version": "0.0.0-development",
  "author": "@hutte-io",
  "bugs": "https://github.com/hutte-io/cli/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@salesforce/command": "^2",
    "@salesforce/core": "^2",
    "@types/js-yaml": "^3",
    "@types/keytar": "^4",
    "@types/request": "^2",
    "chalk": "^2",
    "cross-spawn": "^7.0.2",
    "fuzzy": "^0.1.3",
    "inquirer": "^7.2.0",
    "inquirer-autocomplete-prompt": "^1.0.2",
    "js-yaml": "^3",
    "keytar": "^7.9.0",
    "request": "^2",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@salesforce/ts-sinon": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@types/chai": "^4.2.4",
    "@types/cross-spawn": "^6.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/mocha": "^8",
    "@types/node": "^10.17.3",
    "chai": "^4",
    "globby": "^8",
    "mocha": "^9",
    "sinon": "10.0.0",
    "nyc": "^14",
    "ts-node": "^8",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "eslint": "^7",
    "eslint-config-prettier": "^8",
    "eslint-plugin-header": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsdoc": "^35",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-typescript": "^0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://hutte.io",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "repositoryPrefix": "<%- repo %>/blob/master/<%- commandPath.replace('lib', 'src').replace('.js', '.ts') %>",
    "topics": {
      "hutte": {
        "description": "manage scratch orgs using Hutte"
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "hutte-io/cli",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint src/**/*.ts test/**/*.ts",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts --require ts-node/register mocha --timeout 5000 --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
