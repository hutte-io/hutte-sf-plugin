{
  "name": "hutte",
  "description": "CLI for hutte.io",
  "version": "0.0.0-development",
  "author": "@hutte-io",
  "bugs": "https://github.com/hutte-io/cli/issues",
  "dependencies": {
    "@salesforce/sf-plugins-core": "4.0.0",
    "chalk": "4.1.2",
    "cross-spawn": "7.0.3",
    "fuzzy": "0.1.3",
    "inquirer": "7.3.3",
    "inquirer-autocomplete-prompt": "1.4.0",
    "js-yaml": "3.14.1",
    "keytar": "7.9.0",
    "request": "2.88.2"
  },
  "devDependencies": {
    "@salesforce/dev-config": "4.1.0",
    "@salesforce/prettier-config": "0.0.3",
    "@salesforce/ts-sinon": "1.4.19",
    "@types/chai": "4.3.9",
    "@types/cross-spawn": "6.0.4",
    "@types/inquirer": "9.0.6",
    "@types/js-yaml": "3.12.5",
    "@types/mocha": "10.0.3",
    "@types/node": "18.18.7",
    "@types/request": "2.48.11",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "chai": "4.3.10",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsdoc": "46.8.2",
    "eslint-plugin-prettier": "5.0.1",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "oclif": "4.0.3",
    "prettier": "3.0.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://hutte.io",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sf",
    "topicSeparator": " ",
    "repositoryPrefix": "<%- repo %>/blob/master/<%- commandPath.replace('lib', 'src').replace('.js', '.ts') %>",
    "topics": {
      "hutte": {
        "description": "manage scratch orgs using Hutte"
      }
    },
    "additionalHelpFlags": [
      "-h"
    ]
  },
  "repository": "hutte-io/cli",
  "scripts": {
    "build": "tsc -p .",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint src/**/*.ts test/**/*.ts",
    "prepack": "rm -rf lib && tsc -b && oclif manifest && oclif readme",
    "format": "prettier -w src test",
    "test": "tsc -p test && nyc --extension .ts mocha --require ts-node/register --timeout 5000 --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  }
}
